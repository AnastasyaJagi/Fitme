<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitmeApp.Views.Q4ActivityLevelPage"
    Visual="Material"
    xmlns:local="clr-namespace:FitmeApp.ViewModels">
    
     <!--Background-->
     <StackLayout>
      <Grid VerticalOptions="FillAndExpand">
          <Image Source="Background2" Aspect="AspectFill"/>

          <Grid>
              <Grid.RowDefinitions>
                  <RowDefinition Height="200"/>
                  <RowDefinition Height="*"/>
                  
               
                   </Grid.RowDefinitions>

              <!--Logo back-->
              <StackLayout Grid.Row="0" BackgroundColor="Transparent">
                  <Image Source="backicon"
                         Margin="0,55,290,0"
                         HeightRequest="35">

                      <Image.GestureRecognizers>
                                 <TapGestureRecognizer Tapped="NavigateToQ3AgeHeightWeightPage"/>
                      </Image.GestureRecognizers>
                  </Image>
             
                  <Grid>
            
                      <!--Label Question 4-->
                      <Label TextColor="White"
                             Text="What your level activity?"
                             FontSize="30"
                             FontAttributes="Bold"
                             Margin="0,60,0,0"
                             HorizontalOptions="CenterAndExpand"/>
                  </Grid>
              </StackLayout>

              <!--kotak putih active level-->
              <StackLayout Grid.Row="1" BackgroundColor="Transparent">
                  <ListView HasUnevenRows="False"
                            ItemsSource="{Binding ActivityLevels}"
                            BackgroundColor="Transparent"
                            RowHeight="180"
                            ItemTapped="ListView_ItemTapped"
                            SeparatorVisibility="None">
                      <ListView.ItemTemplate>
                          <DataTemplate>
                              <ViewCell>
                                  <Grid Padding="10">
                                   <!--kotak putih Low-->
                                  <Frame BackgroundColor="White"
                                         CornerRadius="40"
                                         HeightRequest="120"
                                         HasShadow="False"
                                         >

                                      <StackLayout>
                                          <!--label low activity-->
                                    <Label Text="{Binding activity}"
                                           FontAttributes="Bold"
                                           FontSize="22"
                                           TextColor="Black"
                                           HorizontalOptions="CenterAndExpand"
                                           Margin="30,0,30,0"/>

                                   <Label Text="Exercises times : Low Active: 1-3x/week, Moderate : 3-5x/week, Active : 5-7x/week"
                                          
                                           FontSize="18"
                                           TextColor="#717171"
                                           Margin="30,0,30,0">

                                          </Label>
                         
                                        </StackLayout>
                                     </Frame>
                                  </Grid>
                              </ViewCell>
                          </DataTemplate>
                      </ListView.ItemTemplate>
                  </ListView>                
                  </StackLayout>
              
              
              </Grid>
          </Grid>
         </StackLayout>

   
    </ContentPage>
             

